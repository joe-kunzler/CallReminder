{
  "manifest_version": 2,
  "name": "CallReminder",
  "version": "1.0.0",
  "description": "A reminder app for important phone calls",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "CallReminder",
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  }
}
